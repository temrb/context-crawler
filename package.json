{
  "name": "context-crawler",
  "version": "1.5.1",
  "type": "module",
  "bin": {
    "context-crawler": "./dist/src/cli.js"
  },
  "description": "Crawl websites to generate knowledge files from one or multiple URLs",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "commander": "^14.0.1",
    "cors": "^2.8.5",
    "crawlee": "^3.15.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "gpt-tokenizer": "^3.2.0",
    "inquirer": "^12.10.0",
    "minimatch": "^10.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "playwright": "^1.56.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@apify/tsconfig": "^0.1.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.9.1",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "swagger-autogen": "^2.23.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "scripts": {
    "preinstall": "npx playwright install",
    "generate:jobs": "bun run scripts/generate-job-index.ts",
    "dev": "bun run cli -- batch",
    "prebuild": "bun run generate:jobs",
    "build": "tsc",
    "start": "bun run build && bun run swagger && concurrently --kill-others \"bun run start:server\" \"bun run start:worker\"",
    "start:server": "node dist/src/server.js",
    "start:worker": "node dist/src/worker.js",
    "cli": "bun run build && node dist/src/cli.js",
    "check": "npx tsc --noEmit",
    "swagger": "node swagger.js",
    "queue:clear": "bun run build && node scripts/clear-queue.js",
    "repomix": "npx repomix@latest",
    "test": "echo \"No test specified, please create tests.\" && exit 0",
    "fmt": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "author": "It's not you it's me",
  "license": "ISC"
}
