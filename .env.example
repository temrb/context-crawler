# API Server Configuration
API_PORT=5000
API_HOST=localhost

# API Key (Optional - leave unset for local development without auth)
# When set, all API endpoints will require X-API-KEY header
# API_KEY=your-secret-api-key-here

# Worker Configuration
# WORKER_CONCURRENCY: Number of concurrent crawl jobs (default: 2)
# Reduced from 5 to 2 to prevent memory exhaustion and file system race conditions
WORKER_CONCURRENCY=2

# Queue Polling Configuration (Optional)
# POLL_INTERVAL_MS=1000          # How often to check for new jobs (default: 1000ms)
# MAX_POLL_INTERVAL_MS=10000     # Maximum poll interval when queue is empty (default: 10000ms)
# JOB_TIMEOUT_MS=1800000         # Job timeout (default: 30 minutes)
# BACKOFF_DELAY_MS=5000          # Initial retry delay, uses exponential backoff (default: 5000ms, increased from 1000ms)

# Logging Configuration
LOG_LEVEL=info
NODE_ENV=development


# LLM Config
# Chunk size and overlap for embedding generation
LLM_CHUNK_SIZE=10000 #default: 10000
LLM_CHUNK_OVERLAP=100 #default: 100